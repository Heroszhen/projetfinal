{% extends 'base.html.twig' %}
{% block body %}
    {% if completer == false %}
    <h2 class="text-center mt-5 mb-5">QUIZZ</h2>
    <div class="container mt-4">
        <div class="row">
    {% for question in questions %}
        <div class="col-12 mb-5">
            <p>{{ question.question }}</p>
            <div>
            <select class="custom-select reponse">
                <option value="0">veuillez selectionner un choix</option>
                <option value="1">{{ question.option1 }}</option>
                <option value="2">{{ question.option2 }}</option>
                <option value="3">{{ question.option3 }}</option>
            </select>
            <div class="correction-answer" style="display: none">{{ question.correction }}</div>
            <div class="affichage-answer" style="display: none"></div>

            </div>
        </div>
    {% endfor %}
            <button type="submit" class="quizz-answer">soumettre</button>
        </div>
    </div>
    {% else %}
        <h2 class="text-center mt-5 mb-5">Classement</h2>
        <table class="table table-primary mt-3">
            <thead>
            <tr>
                <th scope="col">score</th>
                <th scope="col">utilisateur</th>
                <th scope="col">date</th>
            </tr>
            </thead>
            <tbody>
            {% for classement in classements %}
                <tr>
                    <td>{{ classement.score }}</td>
                    <td>{{ classement.user }}</td>
                    <td>{{ classement.date | date('d/m/Y')  }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
