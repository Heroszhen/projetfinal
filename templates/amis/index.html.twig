{% extends 'base.html.twig' %}

{% block title %}Ma liste d'amis{% endblock %}

{% block body %}

    <h1 class="mt-2">Liste d'amis de {{ user.prenom }} {{ user.nom }}</h1>

    <table class="table table-striped mt-5">
        <thead>
        <tr>
            <th>Image</th>
            <th scope="col">Pr√©nom</th>
            <th scope="col">Nom</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
     {% for ami in user.amis %}
        <tr>
            <td><img src="{{ asset('images/' ~ ami.suivi.photo) }}" alt="{{ ami.suivi.prenom }}"></td>
            <td>{{ ami.suivi.prenom }}</td>
            <td>{{ ami.suivi.nom }}</td>
            <td>
                <a href="{{ path('app_amis_gggg', {'id': ami.suivi.id}) }}">
                    <i class="fas fa-user-minus"></i>
                </a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
