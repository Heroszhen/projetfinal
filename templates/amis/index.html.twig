{% extends 'base.html.twig' %}

{% block title %}Ma liste d'amis{% endblock %}

{% block body %}

    <h1 class="mt-2">Liste d'amis de Prénom Nom</h1>

    <table class="table table-striped mt-5">
        <thead>
        <tr>
            <th>Image</th>
            <th scope="col">Prénom</th>
            <th scope="col">Nom</th>
        </tr>
        </thead>
        <tbody>
     {% for ami in user.amis %}
        <tr>
            <td><img src="{{ ami.suivi.photo }}" alt="{{ ami.suivi.prenom }}"></td>
            <td>{{ ami.suivi.nom }}</td>
            <td>{{ ami.suivi.prenom }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
