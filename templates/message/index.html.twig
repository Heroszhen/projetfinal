{% extends 'base.html.twig' %}

{% block body %}
    <div class="container row">
    <div class="col-4 mt-5">
        <table class="table">
        {% for ami in amis %}
            <tr>
            <p><a data-ami="{{ ami.suivi.id }}" href="{{ path('app_message_message', {'id': ami.suivi.id}) }}" class="show-message">{{ ami.suivi }}</a></p>
            </tr>
        {% endfor %}
        </table>
    </div>
    <div class="col-8">
        <div id="message-utilisateur" data-link="" style="display: none">
            <div class="card mt-4">
                <div id="message-container" class="card-body row" style="height :40em; overflow: auto">

                </div>
            </div>
            <form id="form-message" class="mt-2">
                <div class="row">
                    <div class="form-group col-11">
                        <input name="messageinput" class="form-control" placeholder="votre message">
                    </div>
                    <div class="col-1">
                        <button type="submit" id="messagesub" class="btn btn-primary"> Envoyer</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    </div>
{% endblock %}

{% block javascripts %}
    {# reprend le contenu du block javascripts de base.html.twig#}
    {{ parent() }}
    <script src="{{ asset('js/tchat.js') }}"></script>
{% endblock %}