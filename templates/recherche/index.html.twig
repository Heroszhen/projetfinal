{% extends 'base.html.twig' %}


{% block body %}


    <h2 class="text-center mt-3"><em>Liste de résultats</em></h2>
    {% if users is not null %}
        <div class="mt-5">
            {% for user in users %}
                <ul class="list-group">
                    <li class="list-group-item">
                        <a href="{{ path('app_profil_index',{'id':user.id}) }}"><img src="{{ asset('images/' ~ user.photo) }}" alt="" width="100"></a>
                        <a href="{{ path('app_profil_index', {'id': user.id}) }}"
                           class="" style="font-size: large">
                            {{ user.prenom }} {{ user.nom }}
                        </a><br>
                    </li>
                </ul>
            {% else %}
                <p>Aucun resultat trouvé</p>

            {% endfor %}

        </div>

    {% endif %}


{% endblock %}
