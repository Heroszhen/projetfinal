{% extends 'base.html.twig' %}

{% block title %}Projet Final{% endblock %}

{% block body %}

    {% if app.user is null %} {# Si l'utilisateur n'est pas connecté #}

        <div class="row">
            <div class="col-sm-6">
                <div class="card mt-5">
                    <div class="card-body">
                        <h5 class="card-title">Je me connecte</h5>
                        <p class="card-text">Veuillez entrer vos identifiants</p>

                        <form>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email</label>
                                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Mot de passe</label>
                                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Mot de passe">
                            </div>
                            <button type="submit" class="btn btn-primary">Connexion</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="card mt-5">
                    <div class="card-body">
                        <h5 class="card-title">Je m'inscris</h5>
                        <p class="card-text">Vous n'avez pas encore de compte ? Alors inscrivez vous</p>

                        <strong>Ajouter le formulaire</strong>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <div class="card">
                <h5 class="card-header">Truc de ouf</h5>
                <div class="card-body">
                    <h5 class="card-title">L'application de Zhen</h5>
                    <p class="card-text">Mystère</p>
                    <a href="#" class="btn btn-primary">Par ici</a>
                </div>
            </div>
        </div>

       {# {% else %} #}

        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4 text-center">Vous êtes connecté !</h1>
                <p class="lead"></p>
            </div>
        </div>

    {% endif %}

{% endblock %}
